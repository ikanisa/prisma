# From repo root, on the conflicted branch
git restore --staged package-lock.json   # unstage if needed
git rm --cached package-lock.json        # drop the conflicted lock from the index
rm -f package-lock.json
rm -rf node_modules

# Recreate lockfile from package.json
npm install                              # or: npm ci if you commit a lockfile and want clean installs

# Add the freshly generated lockfile
git add package-lock.json
git commit -m "Regenerate package-lock.json after merge conflict"
