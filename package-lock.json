# from repo root on the conflicted branch
git restore --staged package-lock.json || true
git rm --cached package-lock.json
rm -f package-lock.json
rm -rf node_modules

# Recreate the lockfile from package.json (Node 20, as in CI)
npm install   # use `npm ci` later in CI; use `npm install` locally to generate lock

git add package-lock.json
git commit -m "Regenerate package-lock.json after merge conflict"
