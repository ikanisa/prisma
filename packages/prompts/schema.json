{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Prompt definition schema",
  "type": "object",
  "required": ["id", "task", "system", "input_schema", "output_schema"],
  "properties": {
    "$schema": { "type": "string", "description": "Reference to the prompt schema" },
    "id": { "type": "string", "description": "Short machine readable identifier" },
    "task": { "type": "string", "description": "Human readable description of the task" },
    "system": { "type": "string", "description": "System prompt with high-level instructions" },
    "user": { "type": "string", "description": "Template for user input" },
    "input_schema": { "type": "object", "description": "JSON schema describing accepted input" },
    "output_schema": { "type": "object", "description": "JSON schema describing expected model output" },
    "temperature": { "type": "number", "description": "Sampling temperature", "default": 0 }
  },
  "additionalProperties": false
}
