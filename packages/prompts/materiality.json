{
  "$schema": "./schema.json",
  "id": "materiality",
  "task": "Calculate materiality threshold from financial figures.",
  "system": "You are an auditing assistant that computes materiality based on benchmark figures.",
  "user": "Total assets: {total_assets}\nTotal revenue: {total_revenue}",
  "input_schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "total_assets": { "type": "number", "description": "Client's total assets" },
      "total_revenue": { "type": "number", "description": "Client's total revenue" }
    },
    "required": ["total_assets", "total_revenue"],
    "additionalProperties": false
  },
  "output_schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "materiality": { "type": "number", "description": "Materiality threshold" },
      "basis": { "type": "string", "description": "Basis used for calculation" }
    },
    "required": ["materiality"],
    "additionalProperties": false
  }
}
