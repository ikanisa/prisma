{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "Prisma Glow",
  "version": "2.0.0",
  "identifier": "com.prismaglow.desktop",
  "build": {
    "beforeDevCommand": "pnpm --dir ../.. dev",
    "beforeBuildCommand": "pnpm --dir ../.. build",
    "devUrl": "http://localhost:8080",
    "frontendDist": "../../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Prisma Glow",
        "label": "main",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "center": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: https:; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://api.prisma-glow.com https://*.supabase.co wss://*.supabase.co"
    }
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "Â© 2025 Prisma Glow",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "AI-powered operations platform",
    "longDescription": "Prisma Glow - AI-powered operations platform for modern teams",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "exceptionDomain": null,
      "entitlements": null,
      "signingIdentity": null,
      "providerShortName": null
    },
    "windows": {
      "digestAlgorithm": "sha256",
      "certificateThumbprint": null,
      "timestampUrl": null
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": []
      },
      "rpm": {
        "depends": []
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://releases.prisma-glow.com/desktop/{{target}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": ""
    }
  }
}
