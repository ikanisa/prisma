{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2019",
    "lib": ["ES2019", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "functions/**/*.ts",
    "lib/**/*.ts",
    "utils/**/*.ts",
    "db/**/*.ts"
  ]
}
