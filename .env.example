# ───────────────────────────────────────────────────────────
# Frontend (Vite) variables — safe to expose to the browser
# NOTE: Only variables prefixed with VITE_ are exposed client-side.
# ───────────────────────────────────────────────────────────
VITE_SUPABASE_URL="https://your-project.supabase.co"
VITE_SUPABASE_PROJECT_ID="your-project-id"
VITE_SUPABASE_PUBLISHABLE_KEY="<PUBLIC_ANON_KEY>"
VITE_API_BASE_URL="http://localhost:3001"
VITE_ENABLE_DEMO_LOGIN="false"
VITE_ENABLE_PWA="false"

# ───────────────────────────────────────────────────────────
# Database (server-only) — DO NOT expose in the browser
# Put real values in your secret manager for CI/CD.
# ───────────────────────────────────────────────────────────
DATABASE_URL="postgresql://user:password@host:5432/db"
# Optional: pooled connection (e.g., for Prisma migrations via PgBouncer)
DIRECT_URL="postgresql://user:password@host:5432/db?pgbouncer=true"

# ───────────────────────────────────────────────────────────
# Supabase (server-only)
# ───────────────────────────────────────────────────────────
SUPABASE_PROJECT_ID="your-project-id"
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="<SERVICE_ROLE_KEY>"
SUPABASE_JWT_SECRET="<JWT_SECRET>"

# ───────────────────────────────────────────────────────────
# OpenAI (server-only)
# ───────────────────────────────────────────────────────────
OPENAI_API_KEY="sk-your-key"
OPENAI_RPM="60"

# ───────────────────────────────────────────────────────────
# Backend service configuration (server-only)
# ───────────────────────────────────────────────────────────
VAULT_ADDR="https://vault.internal:8200"
VAULT_TOKEN="<DEV_VAULT_TOKEN>"
VAULT_KV_MOUNT="secret"
SUPABASE_VAULT_PATH="apps/prisma-glow-15/supabase"
SUPABASE_SERVICE_ROLE_VAULT_FIELD="service_role_key"
SUPABASE_JWT_VAULT_FIELD="jwt_secret"

SIGNED_URL_DEFAULT_TTL_SECONDS="300"
SIGNED_URL_EVIDENCE_TTL_SECONDS="300"

API_RATE_LIMIT="60"
API_RATE_WINDOW_SECONDS="60"
# optional webhooks
RATE_LIMIT_ALERT_WEBHOOK="https://hooks.example.com/rate-limit"
ERROR_NOTIFY_WEBHOOK="https://hooks.example.com/error-notify"

# ───────────────────────────────────────────────────────────
# Google Sheets (server-only)
# scope: https://www.googleapis.com/auth/spreadsheets
# ───────────────────────────────────────────────────────────
GOOGLE_SERVICE_ACCOUNT_KEY_PATH="./service-account.json"
GOOGLE_SHEET_ID="your_sheet_id"

# ───────────────────────────────────────────────────────────
# Sampling service (server-only)
# ───────────────────────────────────────────────────────────
SAMPLING_C1_BASE_URL="http://localhost:4005/api/sampling"
SAMPLING_C1_API_KEY="sampling-service-key"
