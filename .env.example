# Supabase Configuration (Frontend)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_PROJECT_ID=your-project-id
SUPABASE_ACCESS_TOKEN=your-access-token

# Supabase Configuration (Backend - Python FastAPI)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret-from-supabase-dashboard
SUPABASE_JWT_AUDIENCE=authenticated

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
API_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
# Gateway CORS - REQUIRED in production
GATEWAY_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
# Production example: GATEWAY_ALLOWED_ORIGINS=https://app.prismaglow.com,https://staging.prismaglow.com

# Netlify Configuration
NETLIFY_SITE_ID=your-netlify-site-id
NETLIFY_AUTH_TOKEN=your-auth-token
NEXT_PUBLIC_APP_URL=https://prisma-glow.netlify.app

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-org-id

# OpenAI Agents SDK Configuration
# Model to use with the Agents SDK (default: gpt-4o)
OPENAI_AGENTS_MODEL=gpt-4o

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro

# Google Gemini ADK Configuration
# Alternatively use GOOGLE_API_KEY (both work)
GOOGLE_API_KEY=your-google-api-key
GEMINI_ADK_MODEL=gemini-2.0-flash

# Vertex AI Configuration (for production Gemini ADK)
VERTEX_AI_PROJECT=your-gcp-project-id
VERTEX_AI_LOCATION=us-central1

# Monitoring
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=prisma-glow
SENTRY_PROJECT=client
