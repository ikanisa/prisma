{
  "files": [],
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@prisma-glow/types": ["./packages/types/src/index.ts"],
      "@prisma-glow/types/*": ["./packages/types/src/*.ts"],
      "@prisma-glow/supabase-client": ["./packages/supabase-client/src/index.ts"],
      "@prisma-glow/database": ["./packages/database/types.ts"],
      "@prisma-glow/ui": ["./packages/ui/src/index.ts"]
    }
  },
  "references": [
    { "path": "./packages/types" },
    { "path": "./packages/supabase-client" },
    { "path": "./packages/database" },
    { "path": "./packages/ui" },
    { "path": "./apps/client" },
    { "path": "./apps/admin" }
  ]
}
