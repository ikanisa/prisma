{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "paths": {
      "@prisma-glow/api-client": ["./packages/api-client/index.ts"],
      "@prisma-glow/system-config": ["./packages/system-config/src/index.ts"],
      "@prisma-glow/ui": ["./packages/ui/src/index.ts"]
    }
  },
  "references": [
    { "path": "./packages/api-client/tsconfig.json" },
    { "path": "./packages/system-config/tsconfig.json" }
  ]
}
