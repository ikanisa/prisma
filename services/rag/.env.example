# Core runtime metadata
NODE_ENV="production"
ENVIRONMENT="production"
SERVICE_VERSION="2025.01.01"
OTEL_SERVICE_NAME="rag-service"
OTEL_EXPORTER_OTLP_ENDPOINT="https://otel-collector.example.com/v1/traces"
SENTRY_DSN="https://<key>@sentry.example.com/<project>"
SENTRY_ENVIRONMENT="production"
SENTRY_RELEASE="2025.01.01"

# Supabase configuration
SUPABASE_URL="https://<project-ref>.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="<service-role-key>"
SUPABASE_JWT_SECRET="<supabase-jwt-secret>"
SUPABASE_JWT_AUDIENCE="authenticated"

# PostgreSQL + caching
DATABASE_URL="postgres://user:password@postgres-host:5432/rag"
REDIS_URL="redis://default:<password>@redis-host:6379/0"

# OpenAI + Model configuration
OPENAI_API_KEY="sk-..."
OPENAI_AGENT_MODEL="gpt-4.1-mini"
DOMAIN_TOOL_MODEL="gpt-5"
DOMAIN_IMAGE_MODEL="gpt-image-1"
OPENAI_WEB_SEARCH_ENABLED="true"
OPENAI_WEB_SEARCH_MODEL="gpt-4.1-mini"
OPENAI_SUMMARY_MODEL="gpt-4.1-mini"
OPENAI_STREAMING_ENABLED="false"
OPENAI_REALTIME_ENABLED="false"
OPENAI_REALTIME_MODEL="gpt-4o-realtime-preview"
OPENAI_REALTIME_VOICE="verse"
OPENAI_TTS_MODEL="gpt-4o-mini-tts"
OPENAI_TTS_VOICE="alloy"
OPENAI_TTS_FORMAT="mp3"
OPENAI_TRANSCRIPTION_MODEL="whisper-1"

# Rate limits & orchestration
API_RATE_LIMIT="60"
API_RATE_WINDOW_SECONDS="60"
RATE_LIMIT_ALERT_WEBHOOK="https://hooks.example.com/rate-limit"
ORCHESTRATION_POLL_INTERVAL_MS="15000"
DOCUMENT_SIGN_TTL="120"

# Google Drive ingestion
GDRIVE_SERVICE_ACCOUNT_EMAIL="service-account@project.iam.gserviceaccount.com"
GDRIVE_SERVICE_ACCOUNT_KEY="<base64-private-key>"
GDRIVE_SHARED_DRIVE_ID="<shared-drive-id>"
GDRIVE_FOLDER_ID="<folder-id>"

# Optional feature toggles
OPENAI_STREAMING_TOOL_ENABLED="false"
OPENAI_REALTIME_TURN_SERVERS='[{"urls":"turn:turn.example.com","username":"user","credential":"pass"}]'
ALLOW_SENTRY_DRY_RUN="false"
ERROR_NOTIFY_WEBHOOK="https://hooks.example.com/errors"
