{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "package.json",
    "pnpm-lock.yaml",
    "tsconfig.base.json",
    "turbo.json"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", "*.tsbuildinfo", "!dist/.tsbuildinfo"]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "bundle": {
      "dependsOn": ["build"],
      "outputs": ["apps/web/.next/analyze/**"],
      "env": [
        "ANALYZE",
        "ANALYZE_MODE",
        "NEXT_DISABLE_ESLINT",
        "NEXT_DISABLE_TYPE_CHECK",
        "SUPABASE_URL",
        "SUPABASE_ANON_KEY",
        "SUPABASE_SERVICE_ROLE_KEY",
        "OPENAI_API_KEY",
        "DEFAULT_ORG_ID"
      ]
    }
  }
}
