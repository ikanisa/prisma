{
  "version": 1,
  "include": ["/*"],
  "exclude": [],
  "rules": [
    {
      "type": "static",
      "glob": "/assets/*.{js,css,json}",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "type": "static",
      "glob": "/*.{js,css,json}",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "type": "navigate",
      "glob": "/*",
      "serve": "/index.html",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ]
}
