# Core service metadata
NODE_ENV="production"
PORT="3000"
OTEL_SERVICE_NAME="prisma-gateway"
OTEL_EXPORTER_OTLP_ENDPOINT="https://otel-collector.example.com/v1/traces"
SERVICE_VERSION="2025.01.01"
SENTRY_RELEASE="2025.01.01"
SENTRY_ENVIRONMENT="production"
SENTRY_DSN="https://examplePublicKey@sentry.io/13579"

# Upstream dependencies
FASTAPI_BASE_URL="https://fastapi.internal"
API_BASE_URL="https://fallback.internal"
AGENT_SERVICE_URL="https://agent-service.internal"
AGENT_SERVICE_API_KEY="<agent-service-api-key>"
RAG_SERVICE_URL="https://rag-service.internal"
RAG_SERVICE_API_KEY="<rag-service-api-key>"

# Access control & rate limiting
GATEWAY_API_KEYS="key-one,key-two"
REDIS_URL="redis://default:<password>@redis-host:6379/0"
DATABASE_URL="postgres://user:password@postgres-host:5432/gateway"
ALLOW_SENTRY_DRY_RUN="false"

# Observability toggles
ENVIRONMENT="production"
