{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2021",
    "lib": ["dom", "dom.iterable", "es2021"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "rootDir": "../..",
    "rootDirs": [
      ".",
      "../src",
      "../packages/lib/src"
    ],
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@lib/*": ["./lib/*"],
      "@/integrations/*": ["./integrations/*"],
      "@/features/*": ["./src/features/*"]
    },
    "plugins": [{ "name": "next" }]
  },
    "include": [
        "next-env.d.ts",
        "types/**/*.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
  "exclude": ["node_modules", "pages/**/*", "../src/pages/**/*", "../tests/**/*"]
}
