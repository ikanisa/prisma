{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2021",
    "lib": ["dom", "dom.iterable", "es2021"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "rootDir": "../..",
    "rootDirs": [
      ".",
      "../src",
      "../packages/lib/src"
    ],
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@lib/*": ["./lib/*"],
      "@/integrations/*": ["./integrations/*"],
      "@/features/*": ["./src/features/*"],
      "@prisma-glow/api-client": [
        "../../packages/api-client/dist/index.d.ts",
        "../../packages/api-client/dist/index.js"
      ],
      "@prisma-glow/system-config": [
        "../../packages/system-config/dist/index.d.ts",
        "../../packages/system-config/dist/index.js"
      ],
      "@prisma-glow/logger": [
        "../../packages/logger/dist/index.d.ts",
        "../../packages/logger/dist/index.js"
      ],
      "@prisma-glow/ui": [
        "../../packages/ui/dist/index.d.ts",
        "../../packages/ui/dist/index.js"
      ],
      "@prisma-glow/lib/*": ["../../packages/lib/dist/*"],
      "@prisma-glow/lib": ["../../packages/lib/dist/index"],
      "@prisma-glow/agents/*": ["../../packages/agents/dist/*"],
      "@prisma-glow/agents": ["../../packages/agents/dist/index"],
      "@prisma-glow/platform/*": [
        "../../packages/platform/dist/*"
      ],
      "@prisma-glow/platform": [
        "../../packages/platform/dist/index"
      ],
      "@prisma-glow/tax/*": ["../../packages/tax/dist/*"],
      "@prisma-glow/tax": ["../../packages/tax/dist/index"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "pages/**/*", "../src/pages/**/*", "../tests/**/*", "tailwind.config.ts"]
}
