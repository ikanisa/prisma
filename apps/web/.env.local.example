#
# Copy this file to `.env.local` when running apps/web locally.
# All values below are safe placeholders; replace with real credentials as needed.
#
# NOTE: Variables marked "SERVER-ONLY" should never be referenced in client-side code.
# Only use them in server-side API routes, middleware, or SSR code.
#

# ⚠️ Authentication (SERVER-ONLY)
AUTH_CLIENT_ID="local-nextauth-client"
AUTH_CLIENT_SECRET="local-nextauth-secret"                        # SERVER-ONLY
AUTH_ISSUER="https://auth.localhost/realms/prisma-glow"

# Sentry - Public DSN (client-safe)
WEB_SENTRY_DSN="https://examplePublicKey@sentry.io/67890"
NEXT_PUBLIC_SENTRY_DSN="https://examplePublicKey@sentry.io/67890"

# Supabase - Public/Client-Safe Variables
NEXT_PUBLIC_SUPABASE_URL="https://REPLACE_WITH_PROJECT_ID.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="REPLACE_WITH_ANON_KEY"
NEXT_PUBLIC_API_BASE="http://localhost:4000"

# ⚠️ Supabase - SERVER-ONLY SECRETS (never use NEXT_PUBLIC_ prefix for these!)
SUPABASE_URL="https://REPLACE_WITH_PROJECT_ID.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="REPLACE_WITH_SERVICE_ROLE_KEY"
SUPABASE_JWT_SECRET="REPLACE_WITH_JWT_SECRET"
SUPABASE_ALLOW_STUB="false"

# ⚠️ Database - SERVER-ONLY (never expose to client)
DATABASE_URL="postgresql://postgres:REPLACE_WITH_PASSWORD@127.0.0.1:5432/postgres"
DIRECT_URL="postgresql://postgres:REPLACE_WITH_PASSWORD@127.0.0.1:5432/postgres?pgbouncer=true"

# ⚠️ Service URLs - SERVER-ONLY
AGENT_SERVICE_URL="http://localhost:4000"
RAG_SERVICE_URL="http://localhost:3001"

# ⚠️ Webhook Secrets - SERVER-ONLY
AUTOMATION_WEBHOOK_SECRET="REPLACE_WITH_AUTOMATION_SECRET"
N8N_WEBHOOK_SECRET="REPLACE_WITH_N8N_SECRET"

# ⚠️ Sampling API - SERVER-ONLY
SAMPLING_C1_BASE_URL="http://localhost:4005/api/sampling"
SAMPLING_C1_API_KEY="REPLACE_WITH_SAMPLING_KEY"

NEXT_PUBLIC_ACCOUNTING_MODE="close"
NEXT_PUBLIC_GROUP_AUDIT_MODE="workspace"
NEXT_PUBLIC_RECONCILIATION_MODE="db"
NEXT_PUBLIC_DEMO_ORG_ID=""
NEXT_PUBLIC_DEMO_ENGAGEMENT_ID=""
NEXT_PUBLIC_DEMO_USER_ID=""

SKIP_HEALTHCHECK_DB="false"

# OpenAI GPT-5 tuning defaults
OPENAI_DEFAULT_REASONING_EFFORT="low"
OPENAI_DEFAULT_VERBOSITY="medium"
OPENAI_AGENT_REASONING_EFFORT="low"
OPENAI_AGENT_VERBOSITY="medium"
OPENAI_SUMMARY_REASONING_EFFORT="minimal"
OPENAI_SUMMARY_VERBOSITY="low"
