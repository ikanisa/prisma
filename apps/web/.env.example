# --- Supabase ------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL="https://<project-ref>.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="<anon-key>"
SUPABASE_URL="https://<project-ref>.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="<service-role-key>"
SUPABASE_ALLOW_STUB="false"

# --- Authentication ------------------------------------------------------
AUTH_CLIENT_ID="<keycloak-client-id>"
AUTH_CLIENT_SECRET="<keycloak-client-secret>"
AUTH_ISSUER="https://<keycloak-domain>/realms/<realm>"

# --- Downstream APIs -----------------------------------------------------
NEXT_PUBLIC_API_BASE="https://api.<domain>.com" # Optional; default is same-origin
AGENT_SERVICE_URL="https://gateway.<domain>.com" # Optional override for agent proxy routing
SAMPLING_C1_BASE_URL="https://sampling.<domain>.com" # Optional sampling integration
SAMPLING_C1_API_KEY="<sampling-api-key>"

# --- Feature Flags -------------------------------------------------------
NEXT_PUBLIC_ACCOUNTING_MODE="close" # close | modules
NEXT_PUBLIC_RECONCILIATION_MODE="db" # db | memory
NEXT_PUBLIC_GROUP_AUDIT_MODE="workspace" # workspace | dashboard
NEXT_PUBLIC_DEMO_ORG_ID="demo-org"
NEXT_PUBLIC_DEMO_ENGAGEMENT_ID="demo-engagement"
NEXT_PUBLIC_DEMO_USER_ID="demo-user"
RECONCILIATION_MODE="db" # db | memory

# --- Compliance Automation ----------------------------------------------
AUTOMATION_WEBHOOK_SECRET="<automation-webhook-secret>"
N8N_WEBHOOK_SECRET="<legacy-n8n-secret>"

# --- Database / Health ---------------------------------------------------
DATABASE_URL="postgres://user:password@host:5432/db"
SKIP_HEALTHCHECK_DB="false"

# --- Tooling -------------------------------------------------------------
VERCEL_AUTOMATION_BYPASS_SECRET="<optional-bypass-secret>"
