NODE_ENV="production"

# Supabase (front-end)
VITE_SUPABASE_URL="https://<your-project>.supabase.co"
VITE_SUPABASE_PROJECT_ID="<your-project-ref>"
VITE_SUPABASE_PUBLISHABLE_KEY="<publishable_anon_key>"
VITE_ENABLE_DEMO_LOGIN="false"
VITE_ENABLE_PWA="true"
VITE_TRACKING_ENABLED="true"

# Health-check URL (used by smoke workflow)
PRODUCTION_HEALTH_URL="https://app.example.com/api/healthz"

# OpenAI API Key
OPENAI_API_KEY="sk-<production-key>"
OPENAI_RPM="60"

# Google Sheets configuration
GOOGLE_SERVICE_ACCOUNT_KEY_PATH="./service-account.json"
GOOGLE_SHEET_ID="<sheet_id>"

# n8n Webhook (if applicable)
N8N_WEBHOOK_URL="https://n8n.example.com/webhook"
ALLOW_DEMO_BOOTSTRAP="false"

# Supabase (server-side)
SUPABASE_URL="https://<your-project>.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="<service_role_key>"
SUPABASE_JWT_SECRET="<your-jwt-secret>"

# Database connection (Prisma)
# Configure these in GitHub/Vercel secrets for runtime and CI; avoid committing real values
DATABASE_URL="postgresql://user:password@host:5432/db"
DIRECT_URL="postgresql://user:password@host:5432/db?pgbouncer=true"

AUTOMATION_WEBHOOK_SECRET="<shared-secret>"
N8N_WEBHOOK_SECRET="<shared-secret>"

# Sampling service configuration
SAMPLING_C1_BASE_URL="https://sampling.example.com/api/sampling"
SAMPLING_C1_API_KEY="<production-sampling-key>"
