NODE_ENV="production"

# Supabase (front-end)
VITE_SUPABASE_URL="https://<your-project>.supabase.co"
VITE_SUPABASE_PROJECT_ID="<your-project-ref>"
VITE_SUPABASE_PUBLISHABLE_KEY="<publishable_anon_key>"
VITE_ENABLE_DEMO_LOGIN="false"
VITE_ENABLE_PWA="true"
VITE_TRACKING_ENABLED="true"

# Health-check URL (used by smoke workflow)
PRODUCTION_HEALTH_URL="https://app.example.com/api/healthz"

# Next.js web (apps/web) authentication + API surface
AUTH_CLIENT_ID="<keycloak-client-id>"
AUTH_CLIENT_SECRET="<keycloak-client-secret>"
AUTH_ISSUER="https://auth.example.com/realms/prisma-glow"
NEXT_PUBLIC_SUPABASE_URL="https://<your-project>.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="<publishable-anon-key>"
NEXT_PUBLIC_API_BASE="https://api.example.com"
AGENT_SERVICE_URL="https://api.example.com"
SKIP_HEALTHCHECK_DB="false"

# OpenAI API Key
OPENAI_API_KEY="sk-<production-key>"
OPENAI_RPM="60"
OPENAI_WEB_SEARCH_ENABLED="true"
OPENAI_WEB_SEARCH_MODEL="gpt-4.1-mini"
WEB_FETCH_CACHE_RETENTION_DAYS="14"

# Hosted file search (RAG service)
OPENAI_FILE_SEARCH_VECTOR_STORE_ID="vs_prod-vector-store"
OPENAI_FILE_SEARCH_MODEL="gpt-4.1-mini"
OPENAI_FILE_SEARCH_MAX_RESULTS="8"
OPENAI_FILE_SEARCH_FILTERS=""
OPENAI_FILE_SEARCH_INCLUDE_RESULTS="true"

# Google Sheets configuration
GOOGLE_SERVICE_ACCOUNT_KEY_PATH="./service-account.json"
GOOGLE_SHEET_ID="<sheet_id>"

# n8n Webhook (if applicable)
N8N_WEBHOOK_URL="https://n8n.example.com/webhook"
ALLOW_DEMO_BOOTSTRAP="false"

# Supabase (server-side)
SUPABASE_URL="https://<your-project>.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="<service_role_key>"
SUPABASE_JWT_SECRET="<your-jwt-secret>"

# Database connection (Prisma)
# Configure these in GitHub/Vercel secrets for runtime and CI; avoid committing real values
DATABASE_URL="postgresql://user:password@host:5432/db"
DIRECT_URL="postgresql://user:password@host:5432/db?pgbouncer=true"

# Optional Vault-backed secret configuration (lib/secrets)
SUPABASE_VAULT_PATH="apps/prisma-glow-15/supabase"
SUPABASE_SERVICE_ROLE_VAULT_FIELD="service_role_key"
SUPABASE_JWT_VAULT_FIELD="jwt_secret"
VAULT_ADDR="https://vault.example.com"
VAULT_TOKEN="<vault-token>"
VAULT_KV_MOUNT="secret"

AUTOMATION_WEBHOOK_SECRET="<shared-secret>"
N8N_WEBHOOK_SECRET="<shared-secret>"

# Sampling service configuration
SAMPLING_C1_BASE_URL="https://sampling.example.com/api/sampling"
SAMPLING_C1_API_KEY="<production-sampling-key>"

# Front-end demo + feature toggles
NEXT_PUBLIC_ACCOUNTING_MODE="close"
NEXT_PUBLIC_GROUP_AUDIT_MODE="workspace"
NEXT_PUBLIC_RECONCILIATION_MODE="db"
NEXT_PUBLIC_DEMO_ORG_ID=""
NEXT_PUBLIC_DEMO_ENGAGEMENT_ID=""
NEXT_PUBLIC_DEMO_USER_ID=""
