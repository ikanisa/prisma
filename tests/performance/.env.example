# Base URL for the gateway service (should include /v1 prefix).
PERF_BASE_URL=https://api.your-environment.example.com/v1

# Organisation context injected via gateway middleware.
PERF_ORG_SLUG=acme
PERF_ORG_ID=acme
PERF_USER_ID=load-test-bot
PERF_ORG_MEMBERSHIPS=acme:ADMIN

# Authentication tokens used to proxy requests to FastAPI.
# Prefer a short-lived service token scoped to read analytics data.
PERF_SERVICE_TOKEN=eyJhbGciOi...
# Optional override for Autopilot-heavy flows.
PERF_AUTOPILOT_TOKEN=eyJhbGciOi...

# Scenario tuning (override via environment variables in CI when needed).
PERF_API_RATE=6
PERF_API_DURATION=2m
PERF_API_VUS=10
PERF_JOURNEY_RATE=4
PERF_JOURNEY_DURATION=2m
PERF_JOURNEY_VUS=6

# Output controls.
PERF_SUMMARY_DIR=test-results/performance
PERF_SUMMARY_FORMAT=full
